  import ElIcon from '../../node_modules/element-ui/packages/icon/src/icon.vue'
  import ElRow from 'element-ui/packages/row/src/row'

  import store from '@/store/index'

  export default {
    store,
    components: {
      ElRow,
      ElIcon,
      ElCol
    },
    name: 'header',
    data: function () {
      return {
        msg: 'LOGO',
        user: {email: localStorage.userName }
      }
    },
    methods: {
      handleCommand (command) {
        if (command === '0') {
          this.$store.commit('change')
          // this.$router.push({path: '/userPw'})
        }
        if (command === '1') {
          let that = this
          let param = ''
          this.axios.post(this.biz.serverUrl + '/rest/logout',param,this.biz.urlencodedConfig)
          .then(function (res) {
            // console.log(res)
            if (res.data.code == '200') {
              // console.log(res)
              localStorage.password = ''
              that.$router.push({path: '/login'})
            }

          }).catch(function (res) {
              console.log(res)
          })
        }
      }
    }
    
  }
</script>

