<script>
 import $ from 'jquery' 
 var qs = require('qs')
 var axios = require('axios')
 export default {
    data() {
      return {
        ruleForm: {
          name: '',
          code:'',
          status: '',
          contactMan:'',
          contactPhone:''
        },
        rules: {
          name: [
            { required: true, message: '请输入公司名称', trigger: 'blur' },
            { min: 3, max: 5, message: '长度在 3 到 5 个字符', trigger: 'blur' }
          ],
          code: [
            { required: true, message: '请输入公司编码', trigger: 'blur' }
          ],
          status: [
            { required: true, message: '请选择状态', trigger: 'blur' }
          ]
        },
        currentPage: 1,
        pageSize: 0,
        pageCount:0,
        tableData:[]
      }
    },
    mounted(){
        this.list()
    },
    methods: {
      onSubmit(formName) {
        this.$refs[formName].validate((valid) => {
          if (valid) {
            // alert('submit!');
            let that = this
            let param = qs.stringify(this.ruleForm)
            console.log(param)
            this.axios.post(this.biz.examUrl+'company/list',param,{headers: {'Content-Type': 'application/x-www-form-urlencoded'}}).then(function (res) {
              console.log(res)
              if(res.status==200){         
                  that.tableData=res.data.datas
                  that.pageSize=res.data.fsp.pageSize
                  that.pageCount=res.data.fsp.pageCount
                  that.currentPage=res.data.fsp.page
              }
            }).catch(function (res) {
              console.log(res)
            })
          } else {
            console.log('error submit!!');
            return false;
          }
        });
      },
      resetForm(formName) {
        this.$refs[formName].resetFields();
      },
      handleCurrentChange: function (currentPage) {
        this.currentPage = currentPage
        // console.log( this.currentPage,currentPage)
        this.list()
      },
      handleClick:function(id){
            $(".popUp").show();
      },
      addInfo:function(){
          this.$router.push({path: '/companyManageAdd'});		
      },
      handleDelete:function(index,data){
        this.$confirm('您确定要删除?', '提示', {
            confirmButtonText: '确定',
            cancelButtonText: '取消',
            type: 'warning',
            center: true
        }).then(() => {
            this.$message({
                type: 'success',
                message: '删除成功!'
            });
            this.tableData.splice(index,1)
        }).catch(() => {
            this.$message({
                type: 'info',
                message: '已取消删除'
            });
        }); 
      },
      editInfo:function(id){
          this.$router.push({path: '/companyManageEdit',query:{id:id}});	
      },
      setopen:function(id) {
        this.$confirm('是否设置为无效,?', '提示', {
          confirmButtonText: '确定',
          cancelButtonText: '取消',
          type: 'warning',
          center: true
        }).then(() => {
          this.$message({
            type: 'success',
            message: '设置成功!'
          });
        }).catch(() => {
          this.$message({
            type: 'info',
            message: '已取消设置'
          });
        });
      },
      close:function(){
          $(".popUp").hide();
      },
      list:function(){
        let that = this
        let aa=qs.stringify({'page':this.currentPage})
        this.axios.post(this.biz.examUrl+'company/list', aa,{headers: {'Content-Type': 'application/x-www-form-urlencoded'}}).then(function (res) {
          console.log(res)
          if(res.status == 200){
              that.tableData=res.data.datas
              that.pageSize=res.data.fsp.pageSize
              that.pageCount=res.data.fsp.pageCount
              that.currentPage=res.data.fsp.page
          }
        }).catch(function (res) {
          console.log(res)
        })
      } 
    }
    
  }
</script>