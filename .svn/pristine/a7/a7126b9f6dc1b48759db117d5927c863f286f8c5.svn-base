      submitForm(formName) {
        this.$refs[formName].validate((valid) => {
          if (valid) {
            let that = this
            let str=''
            this.ruleForm.domains.forEach(function(v,i){
                if(i==that.ruleForm.domains.length-1){
                    str+=v.value+''
                }else{
                    str+=v.value+','
                }               
            })
            this.ruleForm.qrCodeAdmin=str
